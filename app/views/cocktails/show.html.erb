<% if @cocktail.photo.present? %>
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
  <% else %>
  <img src="https://res.cloudinary.com/dxm0jgohk/image/upload/v1590858089/no-image-found_cgtzyt.png" alt="">
<% end %>
<h2><%= @cocktail.name %></h2>

<div class="container">
  <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail) %>

  <ul class="ingredient-list">
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name %> | <%= dose.description %> |
        <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fa fa-trash destroy_dose"></i>
        <% end %>
      </li>
  <% end %>
  </ul>
</div>


<%= link_to "Back to list", cocktails_path, {:class=>"btn btn-secondary"} %>
